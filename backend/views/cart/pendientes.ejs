<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>🕒 Tickets Pendientes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #A47ED7, #3B2A66);
      min-height: 100vh;
      padding-top: 40px;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
    }

    .container {
      max-width: 900px;
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    h2 {
      color: #fff;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .table {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 0.75rem;
      overflow: hidden;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .alert {
      border-radius: 0.75rem;
    }

    .btn-success {
      background-color: #63d471;
      border: none;
    }

    .btn-danger {
      background-color: #f45c5c;
      border: none;
    }

    .btn-secondary {
      background-color: #7446b6;
      border: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>🕒 Tickets Pendientes</h2>

    <% if (tickets.length === 0) { %>
      <div class="alert alert-info text-dark">No hay tickets pendientes.</div>
    <% } else { %>

      <% if (locals.flash && flash.success) { %>
        <div class="alert alert-success text-dark"><%= flash.success %></div>
      <% } %>

      <% if (locals.flash && flash.error) { %>
        <div class="alert alert-danger text-dark"><%= flash.error %></div>
      <% } %>

      <table class="table table-bordered table-striped text-dark">
        <thead class="table-light">
          <tr>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% tickets.forEach(ticket => { %>
            <tr>
              <td><%= ticket.date.toLocaleString('es-MX') %></td>
              <td>$<%= ticket.total.toFixed(2) %></td>
              <td>
                <form action="/cart/cargar-pendiente/<%= ticket._id %>" method="POST" style="display:inline-block;">
                  <button class="btn btn-success btn-sm">📥 Cargar</button>
                </form>

                <form action="/cart/cancelar-pendiente/<%= ticket._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('¿Cancelar este ticket?')">
                  <button class="btn btn-danger btn-sm">🗑️ Cancelar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <!-- ⬅ Ahora regresa al carrito -->
    <a href="/cart/view" class="btn btn-secondary mt-3">⬅ Volver al carrito</a>
  </div>
</body>
</html>
