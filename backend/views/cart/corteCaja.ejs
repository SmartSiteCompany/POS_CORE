<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Corte de Caja</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root{
      --m1:#4f3b8c; --m2:#8363d0; --m3:#7446b6; --m4:#4e2182; --m5:#450c6e;
    }

    body{
      background: linear-gradient(to right, var(--m2), var(--m5));
      font-family: 'Segoe UI', system-ui, -apple-system, Roboto, "Helvetica Neue", Arial, sans-serif;
      min-height: 100vh;
      padding: 40px 15px;
      color: #fff;
    }

    .corte-container{
      background: rgba(255,255,255,.15);
      backdrop-filter: blur(10px);
      border-radius: 1rem;
      padding: 1.25rem 1.25rem 2rem 1.25rem;
      box-shadow: 0 0 15px rgba(0,0,0,.3);
      max-width: 1100px;
    }

    /* Topbar */
    .topbar{
      display:flex; align-items:center; justify-content:space-between;
      gap:12px; margin-bottom: 14px;
      padding: .6rem .8rem;
      background: linear-gradient(135deg, rgba(255,255,255,.22), rgba(255,255,255,.12));
      border: 1px solid rgba(255,255,255,.25);
      border-radius: .75rem;
    }
    .btn-back{
      display:inline-flex; align-items:center; gap:.5rem;
      background: linear-gradient(135deg, var(--m3), var(--m2));
      color:#fff; text-decoration:none;
      border:none; border-radius: .8rem; font-weight:700;
      padding:.55rem .9rem; box-shadow: 0 6px 16px rgba(116,70,182,.35);
      transition: transform .12s ease, box-shadow .16s ease, opacity .2s;
    }
    .btn-back:hover{ transform: translateY(-1px); box-shadow: 0 10px 24px rgba(116,70,182,.45); opacity:.95; }
    .btn-back .icon{ font-size:1.05rem; }

    h2,h4,h5{ color:#fff; margin: 0; }
    .section-title{ margin: 8px 0 18px 0; }

    .form-label, label{ color:#f0effa; font-weight:600; }
    .form-control, .form-select{ background: rgba(255,255,255,.9); border-radius:.5rem; }

    table{ background:#ffffffcc; border-radius:.5rem; overflow:hidden; }
    thead{ background: var(--m3); color:#fff; }
    tbody tr:hover{ background-color: rgba(143,108,209,.1); }

    .btn{ font-weight:700; border-radius:.55rem; }
    .btn-primary{ background: var(--m4); border:none; }
    .btn-danger{ background:#e74c3c; border:none; }
    .btn-success{ background:#2ecc71; border:none; }
    .btn-secondary{ background:#555; border:none; }

    .alert{ border-radius:.6rem; }
  </style>
</head>
<body>
  <div class="container corte-container">

    <!-- 🔙 Topbar con botón Volver al menú (texto dinámico) -->
    <%
      const isAdmin  = usuario && usuario.role === 'administrador';
      const backHref = isAdmin ? '/admin' : '/cart/view';
      const backText = isAdmin ? 'Ir al panel' : 'Ir al carrito';
    %>
    <div class="topbar">
      <a href="<%= backHref %>" class="btn-back">
        <span class="icon"><%= isAdmin ? '🏠' : '🛒' %></span> <%= backText %>
      </a>
      <h2>💼 Corte de Caja</h2>
    </div>

    <% if (flash && flash.success) { %>
      <div class="alert alert-success"><%= flash.success %></div>
    <% } %>
    <% if (flash && flash.error) { %>
      <div class="alert alert-danger"><%= flash.error %></div>
    <% } %>

    <!-- Filtros y acciones solo para ADMIN -->
    <% if (usuario.role === 'administrador') { %>
      <form method="GET" class="row g-3 mb-4">
        <div class="col-md-3">
          <label class="form-label">Usuario</label>
          <select name="user" class="form-select">
            <option value="">Todos</option>
            <% (usuarios || []).forEach(u => { %>
              <option value="<%= u._id %>" <%= String(selectedUser||'') === String(u._id) ? 'selected' : '' %>><%= u.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-2">
          <label class="form-label">Desde</label>
          <input type="date" name="desde" class="form-control" value="<%= desde || '' %>">
        </div>

        <div class="col-md-2">
          <label class="form-label">Hasta</label>
          <input type="date" name="hasta" class="form-control" value="<%= hasta || '' %>">
        </div>

        <div class="col-md-3">
          <label class="form-label">Producto</label>
          <input
            type="text"
            name="producto"
            class="form-control"
            placeholder="Nombre o ID"
            value="<%= producto || '' %>"
            autocomplete="off"
            data-tts="primary-search"
            autofocus
          >
        </div>

        <div class="col-md-2 d-grid align-items-end">
          <button type="submit" class="btn btn-primary">🔍 Filtrar</button>
        </div>
      </form>

      <form action="/cart/corte-caja/imprimir" method="POST" class="mb-4">
        <button class="btn btn-primary">🖨️ Reimprimir Corte de Caja</button>
      </form>
    <% } %>

    <!-- Tabla de ventas (solo admin) -->
    <% if (usuario.role === 'administrador') { %>
      <div class="table-responsive">
        <table class="table table-hover text-white" style="background-color:#4f3b8c; border-radius:1rem; overflow:hidden;">
          <thead style="background-color:#7446b6;">
            <tr>
              <th>📅 Fecha</th>
              <th>👤 Usuario</th>
              <th>💳 Método de Pago</th>
              <th>💲 Total</th>
            </tr>
          </thead>
          <tbody>
            <% (ventas || []).forEach(v => { %>
              <tr style="background-color:#5e3794;">
                <td><%= new Date(v.date).toLocaleString('es-MX') %></td>
                <td><%= v.user?.name || 'N/A' %></td>
                <td><%= v.paymentMethod %></td>
                <td>$<%= Number(v.total || 0).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Paginación -->
      <% if (typeof totalPages === 'number' && totalPages > 1) { %>
        <nav aria-label="Paginación" class="mt-3">
          <ul class="pagination">
            <%
              const qUser  = encodeURIComponent(selectedUser || '');
              const qDesde = encodeURIComponent(desde || '');
              const qHasta = encodeURIComponent(hasta || '');
              const qProd  = encodeURIComponent(producto || '');
              function pageHref(i){ return `?page=${i}&user=${qUser}&desde=${qDesde}&hasta=${qHasta}&producto=${qProd}`; }
            %>
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= currentPage === 1 ? '#' : pageHref(currentPage - 1) %>">«</a>
            </li>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="<%= pageHref(i) %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="<%= currentPage === totalPages ? '#' : pageHref(currentPage + 1) %>">»</a>
            </li>
          </ul>
        </nav>
      <% } %>
    <% } %>

    <!-- Resumen totales -->
    <div class="mt-4">
      <h5>💵 Monto Inicial: $<%= Number(montoInicial || 0).toFixed(2) %></h5>
      <h5>🧾 Total Ventas: $<%= Number(totalAcumulado || 0).toFixed(2) %></h5>
      <h4 class="text-warning section-title">📊 TOTAL CON MONTO INICIAL: $<%= Number(totalConMontoInicial || 0).toFixed(2) %></h4>
      <ul class="mb-0">
        <li>💰 Efectivo: $<%= Number(totalesPorMetodo?.efectivo || 0).toFixed(2) %></li>
        <li>💳 Tarjeta: $<%= Number(totalesPorMetodo?.tarjeta || 0).toFixed(2) %></li>
        <li>🏦 Transferencia: $<%= Number(totalesPorMetodo?.transferencia || 0).toFixed(2) %></li>
        <li>🔀 Mixto: $<%= Number(totalesPorMetodo?.mixto || 0).toFixed(2) %></li>
      </ul>
    </div>

    <!-- Exportaciones (admin) -->
    <% if (usuario.role === 'administrador') { %>
      <div class="mt-4 d-flex gap-3 flex-wrap">
        <a href="/corte-caja/pdf?<%= `user=${encodeURIComponent(selectedUser||'')}&desde=${encodeURIComponent(desde||'')}&hasta=${encodeURIComponent(hasta||'')}&producto=${encodeURIComponent(producto||'')}` %>" class="btn btn-danger">📄 Exportar PDF</a>
        <a href="/corte-caja/excel?<%= `user=${encodeURIComponent(selectedUser||'')}&desde=${encodeURIComponent(desde||'')}&hasta=${encodeURIComponent(hasta||'')}&producto=${encodeURIComponent(producto||'')}` %>" class="btn btn-success">📊 Exportar Excel</a>
        <a href="/corte-caja/json?<%= `user=${encodeURIComponent(selectedUser||'')}&desde=${encodeURIComponent(desde||'')}&hasta=${encodeURIComponent(hasta||'')}&producto=${encodeURIComponent(producto||'')}` %>" class="btn btn-secondary">🧾 Exportar JSON</a>
      </div>

      <div class="mt-5">
        <h4>👥 Montos Iniciales por Usuario</h4>
        <table class="table table-sm table-bordered bg-white text-dark">
          <thead class="table-dark">
            <tr>
              <th>Usuario</th>
              <th>Monto Inicial</th>
            </tr>
          </thead>
          <tbody>
            <% (usuarios || []).forEach(u => { %>
              <tr>
                <td><%= u.name %></td>
                <td>$<%= Number(u.montoInicial || 0).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Script global type-to-search (esta vista no incluye el header) -->
  <script src="/js/type-to-search.js"></script>
</body>
</html>
