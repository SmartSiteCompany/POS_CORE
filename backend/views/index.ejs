<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Login | Punto de Venta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">

  <style>
    body {
      margin: 0;
      padding: 0;
      background:
        linear-gradient(135deg, rgba(131, 99, 208, 0.3), rgba(69, 12, 110, 0.5)),
        url('/css/img/data.jpg') no-repeat center center fixed;
      background-size: cover;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', sans-serif;
      overflow: hidden;
    }

    .login-container {
      width: 100%;
      max-width: 450px;
      padding: 3rem;
      border-radius: 2rem;
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(30px) saturate(160%);
      -webkit-backdrop-filter: blur(30px) saturate(160%);
      border: 1px solid rgba(255, 255, 255, 0.15);
      box-shadow: 0 0 60px rgba(0,0,0,0.4);
      color: #ffffff;
      animation: fadeIn 1.2s ease-in-out;
      transition: all 0.3s ease;
    }

    .login-container:hover {
      transform: scale(1.015);
      box-shadow: 0 0 80px rgba(255, 255, 255, 0.1);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.95);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    h2.title {
      font-weight: bold;
      font-size: 2rem;
      text-align: center;
      color: #ffffff;
      margin-bottom: 1.5rem;
      text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }

    .nav-tabs {
      border: none;
      justify-content: center;
    }

    .nav-link {
      border-radius: 2rem;
      color: #ffffff;
      background-color: transparent;
      transition: all 0.3s ease;
    }

    .nav-link.active {
      background-color: #7446b6;
      color: white;
    }

    label {
      color: #ffffff;
      font-weight: 500;
    }

    input.form-control, select.form-control {
      border-radius: 1rem;
      background-color: rgba(255, 255, 255, 0.85);
      border: none;
      padding: 0.75rem;
    }

    .btn-primary {
      background-color: #7446b6;
      border: none;
      border-radius: 1.5rem;
      padding: 0.75rem;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #4e2182;
    }

    .btn-success {
      background-color: #8363d0;
      border: none;
      border-radius: 1.5rem;
      padding: 0.75rem;
      font-weight: bold;
    }

    .btn-success:hover {
      background-color: #4f3b8c;
    }

    .alert-danger {
      background-color: rgba(255, 0, 0, 0.1);
      color: #ffdddd;
      border: none;
      border-radius: 1rem;
      padding: 0.75rem;
    }
  </style>
</head>
<body>

  <div class="login-container">
    <h2 class="title">Data <span style="color:#ffffff;">✦ POS</span></h2>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <ul class="nav nav-tabs mb-4" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" data-bs-toggle="tab" href="#login" role="tab">Iniciar Sesión</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" data-bs-toggle="tab" href="#register" role="tab">Registrarse</a>
      </li>
    </ul>

    <div class="tab-content">
      <!-- LOGIN -->
      <div class="tab-pane fade show active" id="login" role="tabpanel">
        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <label>Correo</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary w-100 mt-3">Entrar</button>
        </form>
      </div>

      <!-- REGISTRO -->
      <div class="tab-pane fade" id="register" role="tabpanel">
        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <label>Nombre</label>
            <input type="text" class="form-control" name="name" required>
          </div>
          <div class="mb-3">
            <label>Correo</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="mb-3">
            <label>Rol</label>
            <select class="form-control" name="role" required>
              <option value="administrador">Administrador</option>
              <option value="cajero">Cajero</option>
            </select>
          </div>
          <button type="submit" class="btn btn-success mt-3">Registrarse</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
